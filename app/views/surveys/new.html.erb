<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form class="" action="/surveys" method="post">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <div class="">
        <label>Name</label>
        <input type="text" name="survey[name]" value="">
      </div>
      <div class="">
        <label>Language</label>
        <select class="" name="survey[language]">
          <% @languages.each do |language|%>
          <option value="<%= language %>"><%= language %></option>
          <% end %>
        </select>
      </div>
      <div class="">
        <label>Locations</label>
        <select class="" name="survey[location]">
          <% @locations.each do |location|%>
          <option value="<%= location %>"><%= location %></option>
          <% end %>
        </select>
      </div>
      <div class="">
        <label for="">Comment(optional)</label>
      </div>
      <div class="">
        <textarea name="survey[comment]" rows="8" cols="80"></textarea>
      </div>
      <input type="submit" name="" value="Submit">
      <div class="">
        <% if flash[:errors] %>
          <% flash[:errors].each do |error| %>
            <p><%= error %></p>
          <% end %>
        <% end %>
      </div>
    </form>
  </body>
</html>
